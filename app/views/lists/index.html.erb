<h1>To Do List</h1><%= link_to 'New List', new_list_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= link_to 'Show Tasks', list_tasks_path(list) %></td>
        <td><%= link_to 'Edit Title', edit_list_path(list) %></td>
        <td><%= link_to 'Delete List', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

